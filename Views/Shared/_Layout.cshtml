<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - KCert</title>
    <link rel="stylesheet" href="~/lib/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <a class="navbar-brand" asp-action="Home">KCert</a>
                <a class="nav-link" asp-action="Challenge">Challenge Ingress</a>
                <a class="nav-link" asp-action="Configuration">Configuration</a>
            </nav>
        </header>
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2020 - <a href="https://github.com/nabsul/kcert">Nabeel Sulieman</a>
        </div>
    </footer>
    @RenderSection("Scripts", required: false)
</body>
</html>
